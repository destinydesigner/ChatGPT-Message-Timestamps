{
  "manifest_version": 3,
  "name": "ChatGPT Message Timestamps",
  "version": "1.3.0",
  "description": "Display creation timestamps for each ChatGPT message with local/UTC time support and hover details.",
  "author": "destinydesigner",
  "homepage_url": "https://github.com/destinydesigner/ChatGPT-Message-Timestamps",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Timestamps Settings",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["pageHook.js"],
    "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
  }]
}