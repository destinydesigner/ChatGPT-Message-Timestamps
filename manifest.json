{
  "manifest_version": 3,
  "name": "ChatGPT Message Timestamps",
  "version": "1.0.0",
  "description": "在 ChatGPT 页面显示每条消息的创建时间（支持本地/UTC切换、悬停显示精确时间）。",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["pageHook.js"],
    "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
  }]
}